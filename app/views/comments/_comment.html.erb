<li>
  <%= image_tag comment.user.avatar %>
  <%= comment.body %>
  <% if owner?(comment) %>
    <%= link_to t('views.edit'), edit_post_comment_path(post, comment) %>
    <%= link_to t('views.destroy'), [post, comment], method: :delete, data: { confirm: t('views.confirm') }, remote:  true, class: 'delete-comment' %>
  <% end %>
  <%= render partial: 'comments/child_form', locals: { post: post, comment: comment } %>
</li>
