<!DOCTYPE html>
<html>
<head>
  <title><%= t 'title' %></title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if signed_in? %>
    <%= link_to t('views.posts'), posts_path %>
    <%= link_to t('views.new_post'), new_post_path %>
    <%= link_to t('views.show_profile'), user_path(current_user) %>
    <%= link_to t('views.logout'), logout_path, method: :delete %>
  <% end %>

  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "alert alert-#{key}") %>
  <% end %>

<%= yield %>

</body>
</html>
