<%= form_for @user, multipart: true do |f| %>
  <%= render 'shared/errors', object: f.object %>

  <%= f.label :login %>
  <%= f.text_field :login %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.submit t 'views.submit' %>
<% end %>

<% unless signed_in? %>
  <%= link_to t('views.sing_in'), login_path %>
<% end %>
