<li>
  <%= link_to post do %>
    <div class="row">
      <div class="col-xs-3">
        <%= image_tag post.user.avatar, height: '75' %>
      </div>
      <div class="col-xs-9">
        <div class="row">
          <div class="col-xs-12 post-title">
            <%= post.title %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <%= truncate post.body, length: 100 %>
          </div>
        </div>
        <% if owner?(post) %>
          <div class="row">
            <div class="col-xs-12">
            <br>
              <%= link_to t('views.edit'), edit_post_path(post) %> | 
              <%= link_to t('views.destroy'), post, method: :delete, data: { confirm: t('views.confirm') }, remote:  true, class: 'delete-post' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</li>
