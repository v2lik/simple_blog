<%= form_for @post do |f| %>
  <div class="panel-body">
    <%= render 'shared/errors', object: f.object %>

    <div class="row form-group">
      <%= f.label :title, class: 'col-xs-4 control-label' %>
      <%= f.text_field :title, class: 'col-xs-8 form-control' %>
    </div>

    <div class="row form-group">
      <%= f.label :body, class: 'col-xs-4 control-label' %>
      <%= f.text_area :body, class: 'col-xs-8 form-control' %>
    </div>
  </div>
  <%= f.submit t('views.submit'), class: 'btn btn-primary' %>
<% end %>
